{
    "name": "with-typescript",
    "version": "1.0.0",
    "scripts": {
        "dev": "next",
        "build": "next build",
        "start": "next start",
        "type-check": "tsc --project tsconfig.json --pretty --noEmit",
        "lint": "eslint --ext js,jsx,ts,tsx --fix",
        "prettier": "prettier --list-different 'src/**/*.{ts, tsx}' || (echo '\nPlease fix code formatting by running:\nnpm run prettier:fix\n'; exit 1)",
        "prettier:fix": "prettier --write 'src/**/*.{ts, tsx}'",
        "test": "jest",
        "test:watch": "jest --config jest.config.js --watch",
        "test:update": "jest --config jest.config.js -u",
        "ci-check": "npm run prettier && npm run lint && npm run tsc && npm run test",
        "analyze": "cross-env ANALYZE=true next build",
        "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
        "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build"
    },
    "dependencies": {
        "next": "latest",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-redux": "^7.2.2",
        "redux": "^4.0.5",
        "redux-devtools-extension": "^2.13.8",
        "styled-components": "^5.2.1",
        "typesafe-actions": "^5.1.0"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.12.10",
        "@babel/preset-react": "^7.12.10",
        "@next/bundle-analyzer": "^10.0.3",
        "@types/jest": "^26.0.19",
        "@types/node": "^12.12.21",
        "@types/react": "^16.9.16",
        "@types/react-dom": "^16.9.4",
        "@types/react-redux": "^7.1.12",
        "@types/react-test-renderer": "^17.0.0",
        "@types/styled-components": "^5.1.5",
        "@typescript-eslint/eslint-plugin": "^4.9.1",
        "@typescript-eslint/parser": "^4.9.1",
        "babel-jest": "^26.6.3",
        "babel-plugin-styled-components": "^1.12.0",
        "cross-env": "^7.0.3",
        "eslint": "^7.15.0",
        "eslint-config-prettier": "^7.0.0",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.2.0",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "husky": "^4.3.5",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^26.6.3",
        "jest-watch-typeahead": "^0.6.1",
        "prettier": "^2.2.1",
        "react-test-renderer": "^17.0.1",
        "typescript": "4.0"
    },
    "license": "MIT"
}
